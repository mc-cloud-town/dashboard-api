{
  "name": "dashboard-api",
  "version": "0.1.0",
  "main": "src/index.ts",
  "repository": "https://github.com/mc-cloud-town/dashboard-api",
  "author": "CTEC backend team",
  "license": "GPL-3.0",
  "private": true,
  "scripts": {
    "dev": "yarn swagger && concurrently \"nodemon -x yarn swagger\" \"nodemon\"",
    "build": "tsup",
    "start": "node dist/index.js",
    "lint": " eslint src/**/*.ts --fix --max-warnings 0",
    "lint:check": " eslint src/**/*.ts --max-warnings 0",
    "format": "prettier . --write --ignore-unknown",
    "format:check": "prettier . --check --ignore-unknown",
    "swagger": "ts-node script/swagger.ts",
    "prepare": "husky"
  },
  "dependencies": {
    "@types/nodemailer": "^6.4.15",
    "axios": "^1.7.2",
    "cors": "^2.8.5",
    "discord.js": "^14.15.3",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.5.1",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.14",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.13.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@types/cors": "^2.8.17",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/eslint__js": "^8.42.3",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "^1.9.9",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "concurrently": "^8.2.2",
    "crypto": "^1.0.1",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.4",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3",
    "swagger-autogen": "^2.23.7",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tscpaths": "^0.0.9",
    "tsup": "^8.2.3",
    "typescript": "^5.5.4",
    "typescript-eslint": "^7.18.0"
  },
  "nodemonConfig": {
    "exec": "ts-node src",
    "ext": "ts",
    "watch": [
      "src",
      ".env"
    ],
    "delay": "2"
  },
  "tsup": {
    "entry": [
      "src",
      "!src/**/*.d.ts",
      "!src/**/*.test.*",
      "!src/**/__tests__/**"
    ],
    "splitting": false,
    "sourcemap": false,
    "clean": true,
    "minify": false
  }
}
