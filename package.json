{
  "name": "dashboard-api",
  "version": "0.1.0",
  "main": "src/index.ts",
  "repository": "https://github.com/mc-cloud-town/dashboard-api",
  "author": "CTEC backend team",
  "license": "GPL-3.0",
  "private": true,
  "scripts": {
    "dev": "nodemon",
    "build": "tsup",
    "start": "node dist/index.js",
    "lint": " eslint src/**/*.ts --fix --max-warnings 0",
    "format": "prettier . --write --ignore-unknown",
    "format:check": "prettier . --check --ignore-unknown",
    "prepare": "husky"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.2.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.4",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tscpaths": "^0.0.9",
    "tsup": "^8.2.3",
    "typescript": "^5.5.4"
  },
  "nodemonConfig": {
    "exec": "ts-node src/index.ts",
    "ext": "ts",
    "watch": [
      "src"
    ],
    "delay": "2"
  },
  "tsup": {
    "entry": [
      "src",
      "!src/**/*.d.ts",
      "!src/**/*.test.*",
      "!src/**/__tests__/**"
    ],
    "splitting": false,
    "sourcemap": false,
    "clean": true,
    "minify": true
  }
}
